# terraform aliases
alias tf="terraform"
alias tfin="terraform init"
alias tfpl="terraform plan"
alias tfap="terraform apply"
alias tfde="terraform destroy"
alias tfco="terraform console"
alias tfva="terraform validate"

# terraform workspaces
alias tfwon="terraform workspace new"
alias tfwos="terraform workspace select"
alias tfwol="terraform workspace list"
alias tfwod="terraform workspace delete"

# Commands with auto-aprove
alias tfapy="terraform apply -auto-approve"
alias tfdey="terraform destroy -auto-approve"
